<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="at.sheldor5.tr.api.time">
    <class name="at.sheldor5.tr.api.user.Schedule" table="SCHEDULES">
        <id name="id" type="int" column="PK_SCHEDULE_ID">
            <generator class="native"/>
        </id>
        <many-to-one name="user" column="FK_USER_ID" class="at.sheldor5.tr.api.user.UserMapping"/>
        <property name="dueDate" type="date" column="DUEDATE"/>
        <property name="monday" type="time" column="MONDAY"/>
        <property name="tuesday" type="time" column="TUESDAY"/>
        <property name="wednesday" type="time" column="WEDNESDAY"/>
        <property name="thursday" type="time" column="THURSDAY"/>
        <property name="friday" type="time" column="FRIDAY"/>
        <property name="saturday" type="time" column="SATURDAY"/>
        <property name="sunday" type="time" column="SUNDAY"/>
    </class>
</hibernate-mapping>