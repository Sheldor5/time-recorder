<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="at.sheldor5.tr.api.time">
    <class name="Record" table="RECORDS">
        <id name="id" type="int" column="PK_RECORD_ID">
            <generator class="native"/>
        </id>
        <many-to-one name="userId" column="FK_USER_ID" class="at.sheldor5.tr.api.user.UserMapping"/>
        <property name="date" type="date" column="DATE"/>
        <property name="time" type="time" column="TIME"/>
        <property name="type" type="boolean" column="TYPE"/>
    </class>
</hibernate-mapping>