<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="at.sheldor5.tr.api.user">
    <class name="User" table="USER">
        <id name="username" type="string" column="PK_USER" length="32"/>
        <property name="password" type="string" column="PASSWORD" length="60"/>
        <property name="uuid" type="java.util.UUID" column="UUID" unique="true"/>
        <property name="forename" type="string" column="FORENAME"/>
        <property name="surname" type="string" column="SURNAME"/>
    </class>
</hibernate-mapping>